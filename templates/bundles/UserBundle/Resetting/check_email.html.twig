		<div class="row">
			<div class="card margin-top-13 col-12">
				<div class="card-block col">
					<div class="text-center">
						<div class="text-primary">{{ 'security.login.remember_password' | trans | capitalize  }}</div>
						<hr class="mt-1 mb-1">
					</div>
					<div class="card-text padding-08">
						{{ 'resetting.check_email'|trans({'%tokenLifetime%': tokenLifetime})|nl2br }}
