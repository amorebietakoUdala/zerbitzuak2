namespace AppBundle\Entity;

/**
 * Enpresen Entitatea
 *
 * @author ibilbao
 */
use Doctrine\ORM\Mapping as ORM;
use Doctrine\Common\Collections\ArrayCollection;

/**
* @ORM\Entity
* @ORM\Table(name="enpresak")
*/

class Enpresa {
    /**
    * @ORM\Id
    * @ORM\GeneratedValue(strategy="AUTO")
    * @ORM\Column(type="integer")
    */
    private $id;

    /**
    * @ORM\Column(type="string")
    */
    private $izena;

    /**
    * @ORM\Column(type="integer")
    */
    private $ordena;
    
    /**
     * ORM\OneToMany(targetEntity="Arduraduna", mappedBy="enpresa")
     * ORM\OrderBy({"ordena"="DESC"})
     */
    private $arduradunak;
    
    public function __construct() {
	$this->arduradunak = new ArrayCollection();
    }
    
    public function getId() {
	return $this->id;
    }

    public function getIzena() {
	return $this->izena;
    }

    public function setId($id) {
	$this->id = $id;
    }

    public function setIzena($izena) {
	$this->izena = $izena;
    }
    
    public function getOrdena() {
	return $this->ordena;
    }

    public function setOrdena($ordena) {
	$this->ordena = $ordena;
    }

    /**
     * 
     * @return ArrayCollection|Arduraduna[]
     */
    public function getArduradunak() {
	return $this->arduradunak;
    }
    
    public function __toString() {
	return $this->getIzena();
    }

}