{% block vich_file_row -%}
    {% set force_error = true %}
    {{- block('form_row') }}
{%- endblock %}

{% block vich_file_widget %}
    {% spaceless %}
        <div class="vich-file">
            {{ form_widget(form.file,{ 'attr': { 'class': 'btn-file' }}) }}
            {% if download_uri %}
                <a href="{{ download_uri }}">{{ translation_domain is same as(false) ? download_label : download_label|trans({}, translation_domain) }}</a>
            {% endif %}
	    {% if form.delete is defined %}
		<span class="col-1 margin-top-08"><a href="#" class="js-eranskina-ezabatu" title="ezabatu"><i class="fa fa-close"></i></a></span>
            {% endif %}
        </div>
    {% endspaceless %}
{% endblock %}

{% block vich_image_row -%}
