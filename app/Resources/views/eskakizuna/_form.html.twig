                                <button id="buscar" class="col-2 btn btn-primary form-control" type="button"><i class="fa fa-compass"></i>{{"messages.bilatu" | trans | capitalize}}</button>
			    </div>
			    <div class="row col-12">
				<div class="col-12 md-form form-group form-sm">
