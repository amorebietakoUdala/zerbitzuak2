				    <div class="col-lg-2 col-md-2 md-form form-sm">
					<i class="fa fa-envelope prefix"></i>
					<label for="postaKodea">{{ 'messages.postaKodea' | trans | capitalize }}</label>
					{{ form_widget(eskakizunaForm.eskatzailea.postaKodea, { 'attr': { 'class' : 'form-control' } }) }}
