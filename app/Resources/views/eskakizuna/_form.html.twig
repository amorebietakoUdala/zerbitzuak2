					{{ form_errors(eskakizunaForm.eskatzailea.herria) }}
				    </div>
				</div>
			    </div>
			</div>
		    </div>
		{% endif %}
		<div id="eskaria" class="card">
		    <div class="card-block">
			<div class="text-center">
			    <p class="text-primary">{{"messages.eskakizuna" | trans | capitalize}}</p>
			    <hr class="mt-1 mb-1">
			</div>
			<div class="card-text">
			    <div class="row col-12">
				<div class="col-lg-2 col-md-3 md-form form-group form-sm">
				    <i class="fa fa-id-card prefix js-calendar"></i>
				    <label for="let">{{ 'messages.lep' | trans | capitalize }}</label>
				    {{ form_widget(eskakizunaForm.lep, { 'attr': { 'class' : 'form-control' } }) }}
				    {{ form_errors(eskakizunaForm.lep) }}
				</div>
				
				<div class="col-lg-2 col-md-3 md-form form-group form-sm">
				    <i class="fa fa-calendar prefix js-calendar"></i>
				    <label class="js-noiz-label" for="noiz">{{ 'messages.noiz' | trans | capitalize }}</label>
