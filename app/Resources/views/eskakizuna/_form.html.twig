				<div class="col-lg-5 col-md-4 md-form form-group form-sm">
				    <i class="fa fa-compass prefix"></i>
				    <label for="kalea">{{ 'messages.kalea' | trans | capitalize }}</label>
				    {{ form_widget(eskakizunaForm.kalea, { 'attr': { 'class' : 'form-control' } }) }}
				    {{ form_errors(eskakizunaForm.kalea) }}
