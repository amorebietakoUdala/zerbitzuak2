					{{ form_errors(eskakizunaForm.eskatzailea.telefonoa) }}
				    </div>
				</div>
				<div class="row col-12 form-inline">
				    <div class="col-lg-2 col-md-3 md-form form-sm">
					<i class="fa fa-fax prefix"></i>
					<label for="faxa">{{ 'messages.faxa' | trans | capitalize }}</label>
