			<th data-sortable="true">{{"messages.deskripzioa_eu" | trans | capitalize}}</th>
			<th data-sortable="true" class="col-2">{{"messages.aukerak" | trans | capitalize}}</th>
		    </tr>
		</thead>
		<tbody>
		    {% for jatorria in jatorriak %}
