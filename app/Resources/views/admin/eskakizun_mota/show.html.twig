{% extends 'base.html.twig' %}

{% block title %}{{"messages.eskakizun_mota" | trans | capitalize}} {{"messages.ikusi" | trans | capitalize}}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
	
{% endblock %}

{% block edukia %}
    <div class="container">
	<div class="row">
	    <div id="eskakizun_mota_datuak" class="card margin-top-13 col-6">
		<div class="card-block col">
			<div class="text-center">
			    <div id="eskakizun_mota_titulua" class="text-primary">{{"messages.egoera" | trans | capitalize}} {{"messages.ikusi" | trans | capitalize}}</div>
			    <hr class="mt-1 mb-1">
			</div>
			<div class="card-text">
			    {{ include('admin/eskakizun_mota/_form.html.twig',{
				'gordeBotoia': false 
			    }) }}
			</div>
		</div>
	    </div>
	</div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    
    <script type="text/javascript" language="javascript">
	$(document).ready(function(){
	    
	    $("#atzera").click(function() {
		window.location.href=Routing.generate('admin_eskakizun_mota_list',{'_locale': '{{ app.request.getLocale() }}' });
	    });
	});    
    </script>
{% endblock%}
