{% trans_default_domain 'FOSUserBundle' %}

{% block edukia %}
    
    <div class="container">
	<div class="row">
	    <div class="card margin-top-13 col-12">
		<div class="card-block col">
		    <div class="text-center">
			<div class="text-primary">{{ 'security.login.remember_password' | trans | capitalize  }}</div>
			<hr class="mt-1 mb-1">
		    </div>
		    <div class="card-text">
			<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
			    <div class="container">
				<div class="row">
				    <div class="md-form form-group form-sm col-4">
					<i class="fa fa-user prefix"></i>
					<label for="username">{{ 'resetting.request.username'| trans | capitalize }}</label>
					<input class="form-control" type="text" id="username" name="username" required="required" />
				    </div>

				    <div class="md-form form-group form-sm col-4">
					<button class="btn btn-primary form-control waves-effect waves-light" type="submit" formnovalidate><i class="fa fa-send left"></i>{{ 'resetting.request.submit' | trans | capitalize }}</button>
				    </div>
				</div>
			    </div>
			</form>
		    </div>
		</div>
	    </div>
	</div>
    </div>
{% endblock %}